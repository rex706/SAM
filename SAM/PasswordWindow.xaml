<Window x:Name="PasswordWindowDialog" x:Class="SAM.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAM"
        mc:Ignorable="d"
        Title="Password" Height="120" Width="300" Background="#FF333638" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True" Icon="steam_alt-10.ico">
    <Grid>
        <Button Content="OK" HorizontalAlignment="Center" Margin="0,0,0,4" VerticalAlignment="Bottom" Width="75" Click="Button_Click"/>
        <PasswordBox x:Name="PasswordTextBox" PasswordChar="•" Height="23" PreviewKeyDown="PasswordTextBox_PreviewKeyDown" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Margin="10,0,11,0"/>
        <Label Content="Password" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" Foreground="White"/>
    </Grid>
</Window>
